<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:weightSum="100"
    android:background="@drawable/bg3"
    >

    <TextView
        android:id="@+id/tvResult"
        android:layout_weight="20"
        android:text = "0.0"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="right"
        
        android:padding="20dp"
        android:textSize="20dp"        
        />

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="25"
    android:orientation="horizontal"
    android:weightSum="100" 
    
    >

    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_weight="20"
        android:alpha="1"
    	android:textStyle="bold"
         />

    <Button
        android:id="@+id/b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2" 
        android:layout_weight="20"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/b3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3" 
        android:layout_weight="20"
        android:textStyle="bold"
        />
		
    	<Button
        android:id="@+id/bAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+" 
        android:layout_weight="20"
        android:textStyle="bold"
        />
    
    </LinearLayout>

	<LinearLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="25"
	    android:orientation="horizontal"
	    android:weightSum="100" >

    <Button
        android:id="@+id/b4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:layout_weight="20"
        android:textStyle="bold"
         />

    <Button
        android:id="@+id/b5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5" 
        android:layout_weight="20"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/b6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6" 
        android:layout_weight="20"
        android:textStyle="bold"
        />
    
    <Button
        android:id="@+id/bSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-" 
        android:layout_weight="20"
        android:textStyle="bold"
        />
    

    </LinearLayout>
    <LinearLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="25"
	    android:orientation="horizontal"
	    android:weightSum="100" >

    <Button
        android:id="@+id/b7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:layout_weight="20"
        android:textStyle="bold"
         />

    <Button
        android:id="@+id/b8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8" 
        android:layout_weight="20"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/b9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9" 
        android:layout_weight="20"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/bMul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X" 
        android:layout_weight="20"
        android:textStyle="bold"
        />
    
    
    </LinearLayout>
	<LinearLayout
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="25"
	    android:orientation="horizontal"
	    android:weightSum="100" >

    <Button
        android:id="@+id/b0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_weight="20"
        android:textStyle="bold"
         />

    <Button
        android:id="@+id/bDec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AC" 
        android:layout_weight="20"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/bEq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="=" 
        android:layout_weight="20"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/bDiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/" 
        android:layout_weight="20"
        android:textStyle="bold"
        />
    
    
    </LinearLayout>

</LinearLayout>
